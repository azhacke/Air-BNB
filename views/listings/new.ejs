<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>WanderLust</title>
</head>
<% layout("/layouts/boilerplate")%>
  <div class="row">
    <div class="col-8 offset-2">

      <body>
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="enter a catchy title" type="text" class="form-control" required />
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea name="listing[description]" placeholder="enter description" class="form-control"
              required></textarea>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image]" placeholder="enter image URL/Link" type="text" required />

          </div>
          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label">price</label>
              <input name="listing[price]" 
              placeholder="$1200" 
              type="number" 
              required 
              class="form-control"
            />
            </div>

            <div class="mb-3 col-md-8">
              <label for="country" class="form-label">country</label>
              <input name="listing[country]" placeholder="India" type="text" class="form-control" required />
            </div>
          </div>
          <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input name="listing[location]" placeholder="Hyderabad" type="text" class="form-control" required />
          </div>
          <br><br>
          <button class="btn btn-dark add-btn">Add</button>
          <br><br>
        </form>

      </body>
    </div>
  </div>

</html>