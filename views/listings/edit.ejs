<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>WanderLust</title>
</head>
<% layout("/layouts/boilerplate")%>

  <body>
    

    <div class="row">
      <div class="col-8 offset-2">

        <body>
          <h3>Create a New Listing</h3>
          <form method="POST" action="/listings/<%= listing.id %>?_method=PUT">

            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input name="listing[title]" class="form-control" value="<%= listing.title %>" type="text" />
            </div>

            <div class="mb-3">
              <label for="description" class="form-label">description</label>
              <!-- <textarea name="listing[description]" placeholder="enter description" class="form-control"required></textarea> -->
              <textarea name="listing[description]" placeholder="enter description" class="form-control"><%= listing.description %></textarea>

            </div>

            <div class="mb-3">
              <label for="image" class="form-label">Image Link</label>
              <!-- <input name="listing[image]" placeholder="enter image URL/Link" type="text" required /> -->
              <input name="listing[image]" class="form-control" value="<%= listing.image.url %>" type="text" />

            </div>
            <div class="row">
              <div class="mb-3 col-md-4">
                <label for="price" class="form-label">price</label>
                <!-- <input name="listing[price]" placeholder="$1200" type="number" required class="form-control" /> -->
               <input name="listing[price]" value="<%= listing.price %>" class="form-control" type="number" />


              </div>

              <div class="mb-3 col-md-8">
                <label for="country" class="form-label">country</label>
                <!-- <input name="listing[country]" placeholder="India" type="text" class="form-control" required /> -->
               <input name="listing[country]" value="<%= listing.country %>" class="form-control" type="text" />

              </div>
            </div>
            <div class="mb-3">
              <label for="location" class="form-label">location</label>
              <!-- <input name="listing[location]" placeholder="Hyderabad" type="text" class="form-control" required /> -->
              <input name="listing[location]" value="<%= listing.location %>" class="form-control" type="text" />
               
            </div>
            <br><br>
            <button class="btn btn-dark add-btn">Add</button>
            <br><br>
          </form>

        </body>
      </div>
    </div>


  </body>

</html>